@using FormulaOneConnect.Shared.Models;


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Team Name</th>
            <th scope="col">Nationality</th>
            <th scope="col">Points</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var standing in currentConstuctorStandings)
        {
            <tr>
                <th scope="row">@standing.Position</th>
                <td>@standing.Constructor.Name</td>
                <td>@standing.Constructor.Nationality</td>
                <td>@standing.Points</td>
            </tr>
        }
    </tbody>
</table>

@code {

    [Parameter] public int standingsYear { get; set; }
    [Parameter] public List<StandingsList> standings { get; set; }
    [Parameter] public List<ConstructorStanding> currentConstuctorStandings { get; set; }

}
