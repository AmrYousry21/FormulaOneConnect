@using FormulaOneConnect.Shared.Models;

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Number</th>
            <th scope="col">Nationality</th>
            <th scope="col">Wins</th>
            <th scope="col">Points</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var standing in currentDriverStandings)
        {
            <tr>
                <th scope="row">@standing.Position</th>
                <td>@standing.Driver.GivenName</td>
                <td>@standing.Driver.FamilyName</td>
                <td>@standing.Driver.PermanentNumber</td>
                <td>@standing.Driver.Nationality</td>
                <td>@standing.Wins</td>
                <td>@standing.Points</td>
            </tr>
        }
    </tbody>
</table>


@code{
    [Parameter] public int standingsYear { get; set; }
    [Parameter] public List<StandingsList> standings { get; set; }
    [Parameter] public List<DriverStanding> currentDriverStandings { get; set; }
}